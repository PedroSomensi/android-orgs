<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.FormProductActivity">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/activity_product_details_imageview"
            app:srcCompat="@drawable/imagem_padrao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/activity_product_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/activity_product_details_imageview"
            app:layout_constraintTop_toBottomOf="@id/activity_product_details_imageview"
            app:layout_constraintBottom_toBottomOf="@id/activity_product_details_imageview"
            android:layout_margin="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:hint="R$ 12,90"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/background_price_textview_product_details"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:elevation="10dp"
            android:shadowRadius="0.1"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/activity_product_details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/activity_product_details_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/activity_product_details_imageview"
            app:layout_constraintTop_toBottomOf="@id/activity_product_details_price"
            tools:text="textextestespaokspoakposkpaokspoakposaposkopakspoaposakposkoa" />

        <TextView
            android:id="@+id/activity_product_details_descrption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/activity_product_details_title"
            app:layout_constraintStart_toStartOf="@id/activity_product_details_title"
            app:layout_constraintTop_toBottomOf="@id/activity_product_details_title"
            tools:text="textextestespaokspoakposkpaokspoakposaposkopakspoaposakposkoa\n
                        textextestespaokspoakposkpaokspoakposaposkopakspoaposakposkoa\n
                        textextestespaokspoakposkpaokspoakposaposkopakspoaposakposkoa\n
                        textextestespaokspoakposkpaokspoakposaposkopakspoaposakposkoa\n
                        textextestespaokspoakposkpaokspoakposaposkopakspoaposakposkoa\n" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

